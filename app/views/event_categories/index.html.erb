<h3 class="center">Listing Event Categories</h3>

<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead class="bg-info">
    <tr>
      <th class="col-sm-3">Name</th>
      <th class="col-sm-3">Description</th>
      <% if administrator? %>
          <th class="col-sm-3" colspan="3"></th>
      <% end %>
    </tr>
    </thead>

    <tbody>
    <% @event_categories.each do |event_category| %>
        <tr>
          <td class="col-sm-3"><%= event_category.name %></td>
          <td class="col-sm-3"><%= event_category.description %></td>
          <% if administrator? %>
              <td class="col-sm-1"><%= link_to 'Show', event_category, class:'btn btn-primary' %></td>
              <td class="col-sm-1"><%= link_to 'Edit', edit_event_category_path(event_category), class:'btn btn-primary' %></td>
              <td class="col-sm-1"><%= link_to 'Delete', event_category, method: :delete, data: {confirm: 'Are you sure?'}, class:'btn btn-primary' %></td>
          <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>
</div>
