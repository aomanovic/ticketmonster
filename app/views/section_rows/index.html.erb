<p id="notice"><%= notice %></p>

<h1>Listing Section Rows</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Capacity</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @section_rows.each do |section_row| %>
      <tr>
        <td><%= section_row.name %></td>
        <td><%= section_row.capacity %></td>
        <td><%= section_row.section_id %></td>
        <td><%= link_to 'Show', section_row %></td>
        <td><%= link_to 'Edit', edit_section_row_path(section_row) %></td>
        <td><%= link_to 'Destroy', section_row, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

