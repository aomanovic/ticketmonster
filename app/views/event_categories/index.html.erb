<p id="notice"><%= notice %></p>

<h1>Listing Event Categories</h1>

<div class="table-responsive">
  <table class="table table-bordered">
    <thead>
    <tr>
      <th class="col-sm-3">Name</th>
      <th class="col-sm-3">Description</th>
      <th class="col-sm-3" colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @event_categories.each do |event_category| %>
      <tr>
        <td class="col-sm-3"><%= event_category.name %></td>
        <td class="col-sm-3"><%= event_category.description %></td>
        <td class="col-sm-1"><%= link_to 'Show', event_category %></td>
        <td class="col-sm-1"><%= link_to 'Edit', edit_event_category_path(event_category) %></td>
        <td class="col-sm-1"><%= link_to 'Destroy', event_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
</div>
<%= link_to 'New Event category', new_event_category_path %>
