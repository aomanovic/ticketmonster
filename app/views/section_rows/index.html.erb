<p id="notice"><%= notice %></p>

<h1>Listing Section Rows</h1>

<div class="table-responsive">
  <table class="table table-bordered">
    <thead class="bg-info">
    <tr>
      <th class="col-sm-3">Name</th>
      <th class="col-sm-3">Capacity</th>
      <th class="col-sm-3">Section</th>
      <% if administrator? %>
          <th class="col-sm-3" colspan="3"></th>
      <% end %>
    </tr>
    </thead>

    <tbody>
    <% @section_rows.each do |section_row| %>
        <tr>
          <td class="col-sm-3"><%= section_row.name %></td>
          <td class="col-sm-3"><%= section_row.capacity %></td>
          <td class="col-sm-3"><%= section_row.section_id %></td>
          <% if administrator? %>
              <td class="col-sm-1"><%= link_to 'Show', section_row %></td>
              <td class="col-sm-1"><%= link_to 'Edit', edit_section_row_path(section_row) %></td>
              <td class="col-sm-1"><%= link_to 'Destroy', section_row, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>
</div>
