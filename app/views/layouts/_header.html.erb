<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <% if logged_in? %>
        <%= link_to "Ticket monster", main_path, id: "logo" %>
    <% else %>
        <%= link_to "Ticket monster", root_path, id: "logo" %>
    <% end %>
    <nav>
      <% if logged_in? %>

          <ul class="nav navbar-nav">
            <% if !administrator? %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Tickets<span class="caret"></span></a>
                  <ul class="dropdown-menu" role="menu">
                    <li><%= link_to "Events", events_path %></li>
                  </ul>
                </li>
            <% end %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Events<span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <% if administrator? %>
                    <li><%= link_to "New event category", new_event_category_path %></li>
                    <li><%= link_to "New event", new_event_path %></li>
                    <li class="divider"></li>
                    <li><%= link_to "Event Categories", event_categories_path %></li>
                <% end %>
                <li><%= link_to "Events", events_path %></li>
              </ul>
            </li>

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Venues<span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <% if administrator? %>
                    <li><%= link_to "New venue", new_venue_path %></li>
                    <li><%= link_to "New venue layout", new_venue_layout_path %></li>
                    <li><%= link_to "New section", new_section_path %></li>
                    <li><%= link_to "New section row", new_section_row_path %></li>
                    <li class="divider"></li>
                    <li><%= link_to "Venue Layouts", venue_layouts_path %></li>
                    <li><%= link_to "Sections", sections_path %></li>
                    <li><%= link_to "Section rows", section_rows_path %></li>
                <% end %>
                <li><%= link_to "Venues", venues_path %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Bookings<span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <% if administrator? %>
                    <li><%= link_to "New show", new_show_path %></li>
                    <li><%= link_to "New ticket category", new_ticket_category_path %></li>
                    <li><%= link_to "New price category", new_price_category_path %></li>
                    <li class="divider"></li>
                <% end %>
                <li><%= link_to "Shows", shows_path %></li>
                <li><%= link_to "Ticket Categories", ticket_categories_path %></li>
                <li><%= link_to "Price Categories", price_categories_path %></li>
              </ul>
            </li>
          </ul>
      <% end %>

      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
            <li><%= link_to "Main", main_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", '#' %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Log in", login_path %></li>
            <li><%= link_to "Sign Up", signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>