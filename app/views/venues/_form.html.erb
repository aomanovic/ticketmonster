<div class="container">
  <%= form_for(@venue, :html => {:class => 'form-signin'}) do |f| %>
      <h2 class="form-signin-heading">Venue</h2>

      <%= f.text_field :name, class: 'form-control',placeholder: 'Name', :required => true, :autofocus => true  %>

      <%= f.text_area :address, class: 'form-control',placeholder: 'Address' %>

      <%= f.text_area :description, class: 'form-control',placeholder: 'Description' %>

      <button type="submit" class="btn btn-primary ">Submit</button>
      <button type="reset" class="btn btn-primary">Reset</button>

      <%= link_to "Back", venues_path %>

    <% end %>

</div>