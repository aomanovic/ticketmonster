<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(@event) do |f| %>
        <% if @event.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

              <ul>
                <% @event.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>

        <%= f.label :event_category_id %>
        <%= f.select( :event_category_id, options_from_collection_for_select(@event_categories, 'id', 'name', :selected => f.object.event_category_id), class: 'form-control') %>

        <%= f.input :start_date, :as => :datetime_picker, class: 'form-control' %>

        <%= f.input :end_date, :as => :datetime_picker, class: 'form-control' %>

        <%= f.submit "Create Event", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>