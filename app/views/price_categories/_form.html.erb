<div class="container">
  <%= form_for(@price_category, :html => {:class => 'form-signin'}) do |f| %>

      <h2 class="form-signin-heading">Price Category</h2>

      <%= f.select :event_id, options_from_collection_for_select(@events, 'id', 'name', :selected => f.object.event_id), placeholder: 'Event', class: 'form-control' %>

      <%= f.select :venue_layout_id, options_from_collection_for_select(@venue_layouts, 'id', 'name', :selected => f.object.venue_layout_id), placeholder: 'Venue Layout', class: 'form-control' %>

      <%= f.select :section_id, options_from_collection_for_select(@sections, 'id', 'name', :selected => f.object.section_id), placeholder: 'Section', class: 'form-control' %>

      <%= f.select :ticket_category_id, options_from_collection_for_select(@ticket_categories, 'id', 'name', :selected => f.object.ticket_category_id), placeholder: 'Ticket Category', class: 'form-control' %>

      <%= f.text_field :price, class: 'form-control', placeholder: 'Price', :reqired => true %>

      <button type="submit" class="btn btn-primary ">Submit</button>
      <button type="reset" class="btn btn-primary">Reset</button>

      <%= link_to "Back", price_categories_path %>
  <% end %>

</div>