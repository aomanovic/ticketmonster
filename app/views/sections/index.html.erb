<h3 class="center">Listing Sections</h3>

<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead class="bg-info">
    <tr>
      <th class="col-sm-3">Name</th>
      <th class="col-sm-3">Description</th>
      <th class="col-sm-3">Capacity</th>
      <th class="col-sm-3">Layout</th>
      <% if administrator? %>
          <th class="col-sm-3" colspan="3"></th>
      <% end %>
    </tr>
    </thead>

    <tbody>
    <% @sections.each do |section| %>
        <tr>
          <td class="col-sm-3"><%= section.name %></td>
          <td class="col-sm-3"><%= section.description %></td>
          <td class="col-sm-3"><%= section.capacity %></td>
          <td class="col-sm-3"><%= section.venue_layout.name %></td>
          <% if administrator? %>
              <td class="col-sm-1"><%= link_to 'Show', section, class:'btn btn-primary' %></td>
              <td class="col-sm-1"><%= link_to 'Edit', edit_section_path(section), class:'btn btn-primary' %></td>
              <td class="col-sm-1"><%= link_to 'Delete', section, method: :delete, data: {confirm: 'Are you sure?'}, class:'btn btn-primary' %></td>
          <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>
</div>
