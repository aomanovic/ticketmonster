<h3 class="center">Listing Section Rows</h3>

<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead class="bg-info">
    <tr>
      <th class="col-sm-3">Name</th>
      <th class="col-sm-3">Capacity</th>
      <th class="col-sm-3">Section</th>
      <% if administrator? %>
          <th class="col-sm-3" colspan="3"></th>
      <% end %>
    </tr>
    </thead>

    <tbody>
    <% @section_rows.each do |section_row| %>
        <tr>
          <td class="col-sm-3"><%= section_row.name %></td>
          <td class="col-sm-3"><%= section_row.capacity %></td>
          <td class="col-sm-3"><%= section_row.section.name %></td>
          <% if administrator? %>
              <td class="col-sm-1"><%= link_to 'Show', section_row, class:'btn btn-primary' %></td>
              <td class="col-sm-1"><%= link_to 'Edit', edit_section_row_path(section_row), class:'btn btn-primary' %></td>
              <td class="col-sm-1"><%= link_to 'Delete', section_row, method: :delete, data: {confirm: 'Are you sure?'}, class:'btn btn-primary' %></td>
          <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>
</div>
