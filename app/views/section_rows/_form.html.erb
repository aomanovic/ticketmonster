<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@section_row) do |f| %>
        <% if @section_row.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@section_row.errors.count, "error") %> prohibited this section_row from being
                saved:</h2>

              <ul>
                <% @section_row.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>


        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :capacity %>
        <%= f.number_field :capacity, class: 'form-control' %>

        <%= f.label :section_id %>
        <%= f.select :section_id, options_from_collection_for_select(@sections, 'id', 'name'), class: 'form-control' %>

        <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
