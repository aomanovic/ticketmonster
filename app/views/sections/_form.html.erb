<div class="container">
  <%= form_for(@section, :html => {:class => 'form-signin'}) do |f| %>
      <h2 class="form-signin-heading">Section</h2>

      <%= f.text_field :name, class: 'form-control', placeholder: 'Name', :required => true, :autofocus => true %>

      <%= f.text_area :description, class: 'form-control', placeholder: 'Description' %>

      <%= f.number_field :capacity, class: 'form-control', placeholder: 'Capacity', :required => true %>


      <%= f.select :venue_layout_id, options_from_collection_for_select(@layouts, 'id', 'name', :selected => f.object.venue_layout_id), placeholder: 'Venue Layout', class: 'form-control' %>

      <button type="submit" class="btn btn-primary ">Submit</button>
      <button type="reset" class="btn btn-primary">Reset</button>

      <%= link_to "Back", sections_path %>
  <% end %>

</div>
